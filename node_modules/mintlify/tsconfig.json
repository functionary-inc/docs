{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2017",
    "lib": ["es2016", "dom", "ES2021.String"],
    "sourceMap": true,
    "outDir": "bin",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
